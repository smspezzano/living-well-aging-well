<div class='text-center' id='addImageForm'>
  <h4>Upload your image:</h4>
  <%= form_for :activity, url: real_chart_activities_path(@real_chart.id), method: :post, :html => {id: "image_form", :multipart => true, class: "form-horizontal"} do |f| %>
    <%= f.hidden_field :real_chart_id, value: @real_chart.id  %> 
      <div class="form-group">
    <div class="col-xs-4 visible-xs"></div>
    <div class="col-xs-offset-4 col-xs-6">
      <div class="checkbox">

        <label>
           <%= f.file_field :image %>
        </label>
      </div>
    </div>
  </div>
    <p>Note all images will be shown in your profile page.</p>
    <%= f.submit "Upload", class: 'btn btn-success'%>
  <% end %>
</div>